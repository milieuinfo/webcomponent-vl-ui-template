{
  "name": "vl-ui-template",
  "version": "0.0.9",
  "description": "De standaard template voor websites en applicaties van de Vlaamse overheid",
  "main": "vl-template.js",
  "author": "DIDM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-template.git"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-template#readme",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-ui-template/issues"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  },
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "test": "wct -l chrome,firefox --npm",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:imports && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-template.js -- *.src.js",
    "release:prepare:imports": "npm run release:prepare:imports:core",
    "release:prepare:imports:core": "replace '/node_modules/vl-ui-core/vl-core.src.js' '/node_modules/vl-ui-core/vl-core.js' vl-template.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-template/style.css' vl-template.js",
    "release:prepare:commit": "git add -f vl-template.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server -p 9000"
  },
  "dependencies": {
    "vl-ui-core": "^2.3.0"
  },
  "peerDependencies": {
    "vl-ui-core": "^2.3.0"
  },
  "devDependencies": {
    "http-server": "0.11.1",
    "np": "3.1.0",
    "replace": "1.1.1",
    "uglify-js-es6": "2.8.9",
    "vl-ui-content-header": "^1.0.0",
    "vl-ui-footer": "^0.0.1",
    "vl-ui-grid": "1.0.12",
    "vl-ui-header": "^0.0.1",
    "vl-ui-image": "^1.0.0",
    "vl-ui-titles": "^1.0.13",
    "vl-ui-typography": "^1.0.1",
    "vl-ui-util": "^3.0.0",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2"
  }
}
